<Border x:Class="BuildStatusPanel.Content.BuildDayWrapPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BuildStatusPanel"
             xmlns:Content="clr-namespace:BuildStatusPanel.Content" 
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" BorderBrush="DarkGray" CornerRadius="2,2,2,2" BorderThickness="1,1,1,1" Margin="1" Padding="0,1,0,1">
    <WrapPanel x:Name="Panel" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
        <WrapPanel.Background>
            <LinearGradientBrush Opacity=".10" StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop x:Name="RedGradientStop" Color="Red" Offset="0.31" />
                <GradientStop x:Name="GreenGradientStop" Color="Green" Offset="0.29" />
            </LinearGradientBrush>
        </WrapPanel.Background>
        <Content:DayLabel x:Name="DayLabel" Content="HorzLabel" HorizontalAlignment="Center"/>
    </WrapPanel>
</Border>